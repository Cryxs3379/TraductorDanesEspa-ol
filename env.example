# =============================================================================
# Configuración del Traductor ES → DA
# =============================================================================
# Copia este archivo a .env y ajusta los valores según tus necesidades.

# =============================================================================
# MODELO NLLB
# =============================================================================

# Modelo a usar (opciones: facebook/nllb-200-distilled-600M, facebook/nllb-200-1.3B)
# - 600M: ~2.4GB, RAM >= 8GB (recomendado para la mayoría)
# - 1.3B: ~5GB, RAM >= 16GB (mejor calidad)
MODEL_NAME=facebook/nllb-200-distilled-600M

# Directorio donde se descarga el modelo HuggingFace
MODEL_DIR=./models/nllb-600m

# Directorio del modelo convertido a CTranslate2 INT8
CT2_DIR=./models/nllb-600m-ct2-int8

# =============================================================================
# CTRANSLATE2 - CONFIGURACIÓN DE RENDIMIENTO
# =============================================================================

# Configuración de hilos para CTranslate2
# 0 = automático (usa todos los cores disponibles, recomendado)
CT2_INTER_THREADS=0
CT2_INTRA_THREADS=0

# Tamaño del beam search (4-5 recomendado, mayor = mejor calidad pero más lento)
BEAM_SIZE=4

# Tamaño de batch para inferencia (ajustar según RAM disponible)
DEFAULT_BATCH_SIZE=16

# =============================================================================
# SERVIDOR API
# =============================================================================

# Puerto y host del servidor FastAPI
API_PORT=8000
API_HOST=0.0.0.0

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# PRIVACIDAD Y SEGURIDAD
# =============================================================================

# Registrar textos traducidos en logs (IMPORTANTE: false en producción)
LOG_TRANSLATIONS=false

